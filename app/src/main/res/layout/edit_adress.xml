<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <include
        android:id="@+id/edit_top"
        layout="@layout/top_bar"></include>
    <View
        android:layout_below="@id/edit_top"
        android:id="@+id/edit_top_view"
        style="@style/divide_view"></View>

    <LinearLayout
        android:id="@+id/ed_r0"
        android:orientation="vertical"
        android:layout_below="@id/edit_top_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">
            <TextView
                android:layout_centerVertical="true"
               android:id="@+id/ed_r1"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="所在城市 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:background="@drawable/shape_hui"
                android:textSize="15sp"
                android:layout_toRightOf="@id/ed_r1"
                android:layout_marginLeft="20dp"
                android:text="淄博"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="33dp" />
            <View
                android:layout_alignParentBottom="true"
                style="@style/divide_line"></View>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ed_r2"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="所在区/县 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner

                android:background="@drawable/shape_hui"
                android:id="@+id/edit_Spinn"
                android:layout_marginRight="@dimen/txt_20"
                android:layout_marginLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/ed_r2"
                android:layout_width="match_parent"
                android:layout_height="33dp">
            </Spinner>
            <View
                android:layout_alignParentBottom="true"
                style="@style/divide_line"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ed_r3"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="小区/大厦/学校 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/edit_adress"
                android:textSize="15sp"
                android:hint="中信大厦"
                android:layout_marginLeft="@dimen/txt_10"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/txt_20"
                android:layout_toRightOf="@id/ed_r3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                style="@style/divide_line"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ed_r4"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="楼牌号/门牌号 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/edit_home"
                android:layout_marginLeft="@dimen/txt_10"
                android:textSize="15sp"
                android:hint="B座25楼"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/txt_20"
                android:layout_toRightOf="@id/ed_r4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                style="@style/divide_line"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ed_r5"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="收货人 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/edit_name"
                android:layout_marginLeft="@dimen/txt_10"
                android:textSize="15sp"
                android:hint="隔壁老于"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/txt_20"
                android:layout_toRightOf="@id/ed_r5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                style="@style/divide_line"></View>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="49dp">
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/ed_r6"
                android:textSize="15sp"
                android:layout_marginLeft="20dp"
                android:text="联系电话 :"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@null"
                android:id="@+id/edit_phone"
                android:layout_marginLeft="@dimen/txt_10"
                android:textSize="15sp"
                android:hint="1888888888"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/txt_20"
                android:layout_toRightOf="@id/ed_r6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:layout_alignParentBottom="true"
                style="@style/divide_line"></View>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/ed_save"
        android:layout_marginLeft="80dp"
        android:background="@drawable/selector_order"
        android:text="保存"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:layout_below="@id/ed_r0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/edit_delelt"
        android:layout_marginLeft="80dp"
        android:background="@drawable/selector_order"
        android:text="删除"
        android:textColor="@color/main_red"
        android:layout_centerInParent="true"
        android:layout_marginTop="15dp"
        android:layout_below="@id/ed_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>