<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:background="#FFFFFF"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <RelativeLayout
        android:id="@+id/login_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF3366"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/jzfw_top_layout_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@id/login_top_layout"
		android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
         
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_launcher" />
    ]<ImageView
        android:id="@+id/login_tupian"
        android:layout_below="@id/login_logo"
        android:background="@drawable/daojia"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="30dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
    <View
        android:layout_below="@id/login_tupian"
        android:id="@+id/blank"
         android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="#FFFFFF"/>
        <RelativeLayout 
            android:id="@+id/login_Relay_Name" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank"
            >
            	<ImageView android:id="@+id/login_Img_Phone" 
            	    android:layout_width="wrap_content" 
            	    android:layout_height="wrap_content"
            	    android:contentDescription="@null"
            	    android:src="@drawable/phone"/>
            	<EditText android:id="@+id/login_Edt_Name" 
            	    android:layout_width="match_parent"
            	    android:layout_height="wrap_content"
            	    android:layout_alignBottom="@+id/login_Img_Phone"
            	    android:layout_alignParentRight="true"
            	    android:layout_alignParentTop="true"
            	    android:background="@null"
            	    android:cursorVisible="@null"
            	    android:ems="10"
            	    android:hint="请输入手机号"
            	    android:paddingLeft="40sp"
            	    android:textColor="@android:color/black"
            	    android:textSize="16sp"
            	    android:inputType="phone"
            	    />
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/login_Relay_Pwd" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/login_Relay_Name"
            android:layout_marginTop="20sp"

            >
            <ImageView android:id="@+id/login_Img_Key"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/key"/>
            <EditText android:id="@+id/login_Edt_Pwd" 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/login_Img_Key"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:ems="10"
                android:hint="请输入密码"
                android:inputType="textPassword"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
        </RelativeLayout>
        
        <RelativeLayout android:id="@+id/login_Relay_check" 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_Relay_Pwd"
            android:layout_marginTop="10sp">

            <TextView
                android:id="@+id/login_link_FindPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码？"
                android:textColor="#339999"
                android:textSize="16sp" />
            
        </RelativeLayout>
        
        <RelativeLayout android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:layout_below="@+id/login_Relay_check"
            android:layout_marginTop="40sp">
            <Button

				android:id="@+id/login_Btn_login"
                android:layout_width="match_parent"
                android:layout_height="40sp"
				android:background="@drawable/login1"
                android:textSize="18sp"/>
            <TextView
                android:textColor="#339999"
                android:id="@+id/login_regNewId" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_Btn_login"
                android:layout_centerInParent="true"
                android:layout_marginTop="10sp"
                android:text="注册新账号"

                />
        </RelativeLayout>
        
    </RelativeLayout>
</RelativeLayout>
