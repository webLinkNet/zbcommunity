<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:background="#FFFFFF"
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
   <include layout="@layout/top_bar"
	   android:id="@+id/login_top_layout"></include>
    <RelativeLayout
        android:layout_below="@id/login_top_layout"
		android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
         
    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mmx" />
    <TextView
		android:textColor="@color/black"
		android:gravity="center"
		android:text="快乐到家"
        android:id="@+id/login_tupian"
        android:layout_below="@id/login_logo"
        android:textSize="18dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        />
		<View
			android:id="@+id/login1"
		    android:layout_below="@id/login_tupian"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/grey_color4"/>

		<RelativeLayout
			android:layout_marginLeft="10dp"
			android:layout_marginTop="5dp"
			android:id="@+id/login_Relay_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/login1"
            >

            	<ImageView android:id="@+id/login_Img_Phone" 
            	    android:layout_width="wrap_content" 
            	    android:layout_height="wrap_content"
            	    android:contentDescription="@null"
            	    android:src="@drawable/phone"/>
            	<EditText android:id="@+id/login_Edt_Name" 
            	    android:layout_width="match_parent"
            	    android:layout_height="45dp"
            	    android:layout_alignBottom="@+id/login_Img_Phone"
            	    android:layout_alignParentRight="true"
            	    android:layout_alignParentTop="true"
            	    android:background="@null"
            	    android:cursorVisible="@null"
            	    android:hint="输入手机号"
            	    android:paddingLeft="40sp"
            	    android:textColor="@android:color/black"
            	    android:textSize="14sp"
            	    android:inputType="phone"
            	    />
        </RelativeLayout>
		<View
			android:layout_marginLeft="10dp"
			android:layout_marginTop="10dp"
			android:id="@+id/login2"
			android:layout_below="@id/login_Relay_Name"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/grey_color4"/>
        <RelativeLayout
			android:layout_marginLeft="10dp"
			android:id="@+id/login_Relay_Pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/login_Relay_Name"
            android:layout_marginTop="20sp"

            >
            <ImageView android:id="@+id/login_Img_Key"
                android:layout_width="wrap_content" 
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/login_pwd"/>
            <EditText android:id="@+id/login_Edt_Pwd" 
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignBottom="@+id/login_Img_Key"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:hint="登录密码"
                android:inputType="textPassword"
                android:paddingLeft="40sp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                />
        </RelativeLayout>
		<View
			android:layout_marginTop="5dp"
			android:id="@+id/login3"
			android:layout_below="@id/login_Relay_Pwd"
			android:layout_width="match_parent"
			android:layout_height="2dp"
			android:background="@color/grey_color4"/>

		<Button
			android:layout_marginLeft="10dp"
			android:layout_marginTop="23dp"
			android:textColor="@color/white"
			android:layout_below="@id/login_Relay_Pwd"
			android:id="@+id/login_Btn_login"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:text="登录"
			android:background="@drawable/shape_commit_eval"
			android:textSize="18sp"/>

		<RelativeLayout
			android:layout_marginTop="20dp"
			android:id="@+id/login_Relay_check"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/login_Btn_login"
			>

			<TextView
				android:id="@+id/login_link_FindPwd"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentRight="true"
				android:text="忘记密码?  "
				android:textColor="#999999"
				android:textSize="14sp" />

		</RelativeLayout>

            <Button
				android:background="@drawable/shape_commit_login"
                android:textColor="@color/main_red"
                android:id="@+id/login_regNewId" 
                android:layout_width="107dp"
                android:layout_height="33dp"
                android:layout_below="@id/login_Relay_check"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:text="免费注册"

                />

        
    </RelativeLayout>
</RelativeLayout>
