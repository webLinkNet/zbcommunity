<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    

    <LinearLayout 
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        >
        <RelativeLayout
            android:layout_height="wrap_content" 
            android:layout_weight="2"
            android:layout_width="match_parent">
            <TextView
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_centerVertical="true"
                android:id="@+id/mine_myorder_storename"
                android:text="某某某某店"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content" 
                android:layout_width="wrap_content"/>
            <ImageView
                android:layout_alignParentRight="true" 
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/mine_arrow"/>
            <View
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#CCCCFF"  
                android:layout_width="match_parent"
                />
            
        </RelativeLayout>
         <RelativeLayout
             android:layout_height="wrap_content" 
             android:layout_weight="1"
            android:layout_width="match_parent">
            <com.weblink.zbcommunity.utils.CircleUtils
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher"
                android:id="@+id/mine_myorderlist_img1"
                android:layout_marginLeft="25dp"
                android:layout_height="70dp"
                android:layout_width="70dp"/>
             <com.weblink.zbcommunity.utils.CircleUtils
                 android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img1"
                android:id="@+id/mine_myorderlist_img2"
                android:layout_height="70dp"
                android:layout_width="70dp"/>
              <com.weblink.zbcommunity.utils.CircleUtils
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@id/mine_myorderlist_img2"
                  android:id="@+id/mine_myorderlist_img3"
                android:layout_height="70dp"
                android:layout_width="70dp"/>
              <ImageView

                  android:id="@+id/mine_sandian"
                  android:layout_toRightOf="@id/mine_myorderlist_img3"
                  android:background="@drawable/mine_arrow"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"/>
              <TextView
                  android:textColor="#000000"
                  android:layout_toRightOf="@id/mine_sandian"
                  android:id="@+id/mine_gong"
                  android:layout_centerVertical="true"
                  android:text="共"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  />
               <TextView
                   android:textSize="15sp"
                   android:textColor="#000000"
                   android:text="5"
                  android:layout_toRightOf="@id/mine_gong"
                  android:id="@+id/mine_list_jianshu"
                  android:layout_centerVertical="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  />
               <TextView
                   android:textColor="#000000"
                  android:layout_toRightOf="@id/mine_list_jianshu"
                  android:id="@+id/mine_jian"
                  android:layout_centerVertical="true"
                  android:text="件"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  />
              <ImageView
                  android:layout_alignParentRight="true" 
                  android:background="@drawable/mine_arrow"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true"/>
              
              <View
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#CCCCFF"  
                android:layout_width="match_parent"
                />
        </RelativeLayout>
        
         <RelativeLayout 
             android:layout_height="wrap_content"
             android:layout_weight="2"
             android:layout_width="match_parent">
              
             <TextView
                 android:textColor="#000000"
               android:layout_centerVertical="true"
                 android:id="@+id/mine_shidu"
                 android:layout_marginLeft="25dp"
                 android:text="实付  : 共" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
              <TextView
                  android:textColor="#000000"
                    android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/mine_shidu"
                 android:id="@+id/mine_list_qian"
                 android:layout_marginLeft="25dp"
                 android:text="5" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
                <TextView
                    android:textColor="#000000"
                      android:layout_centerVertical="true"
                 android:layout_toRightOf="@id/mine_list_qian"
                 android:id="@+id/mine_list_yuan"
                 android:layout_marginLeft="25dp"
                 android:text="元" 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"/>
                  <Button
                      android:textColor="#000000"
                    android:background="#3366FF" 
                    android:textSize="10sp"
                    android:layout_alignParentRight="true"
                    android:id="@+id/mine_list_button2"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    />
                   
                <Button
                    android:textColor="#000000"
                    android:background="#33CCFF"
                    android:textSize="10sp"
                    android:layout_toLeftOf="@id/mine_list_button2"
                    android:id="@+id/mine_list_button1" 
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    />
                
                   <View
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black"
                android:layout_width="match_parent"
                />
        </RelativeLayout>
        
    </LinearLayout>
</RelativeLayout>
