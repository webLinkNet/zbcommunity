<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">

            <TextView
                android:id="@+id/mine_myorder_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="某某某某店"
                android:textColor="#000000"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorder_storename"
                android:background="@drawable/mine_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#CCCCFF" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <com.weblink.zbcommunity.utils.CircleUtils
                android:id="@+id/mine_myorderlist_img1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_launcher" />

            <com.weblink.zbcommunity.utils.CircleUtils
                android:id="@+id/mine_myorderlist_img2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img1" />

            <com.weblink.zbcommunity.utils.CircleUtils
                android:id="@+id/mine_myorderlist_img3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img2" />

            <ImageView

                android:id="@+id/mine_sandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img3"
                android:background="@drawable/mine_arrow" />

            <TextView
                android:id="@+id/mine_gong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_sandian"
                android:text="共"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/mine_list_jianshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_gong"
                android:text="5"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mine_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_list_jianshu"
                android:text="件"
                android:textColor="#000000" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/mine_arrow" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="#CCCCFF" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2">



            <TextView
                android:id="@+id/mine_list_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="5"
                android:textColor="#000000" />

            <Button
                android:id="@+id/mine_list_button2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"

                android:textColor="#000000"
                android:textSize="10sp" />

            <Button
                android:text="查看订单详情"
                android:id="@+id/mine_list_button1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/mine_list_button2"
                android:textColor="#000000"
                android:textSize="10sp" />

            <Button

                android:id="@+id/mine_list_button3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/mine_list_button1"
                android:visibility="visible"
                android:text="取消订单"
                android:textColor="#000000"
                android:textSize="10sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_alignParentBottom="true"
                android:background="@color/black" />
        </RelativeLayout>

    </LinearLayout>
</RelativeLayout>
