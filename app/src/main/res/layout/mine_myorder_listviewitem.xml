<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">



        <RelativeLayout
            android:id="@+id/nn1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            >

            <TextView
                android:gravity="center"
                android:drawableLeft="@drawable/mine_shop"
                android:id="@+id/mine_myorder_storename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:text="某某某某店"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:textSize="20sp"
                android:text="  >"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorder_storename"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_color4"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/nn1"
            android:id="@+id/nn2"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            >

            <ImageView
                android:id="@+id/mine_myorderlist_img1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:src="@drawable/ic_launcher" />

            <ImageView
                android:layout_margin="5dp"
                android:id="@+id/mine_myorderlist_img2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img1" />

            <ImageView
                android:id="@+id/mine_myorderlist_img3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img2" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/mine_sandian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_myorderlist_img3"
                android:text="..." />

            <TextView
                android:id="@+id/mine_gong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_sandian"
                android:text="  共"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/mine_list_jianshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_gong"
                android:text="5"
                android:textColor="#000000"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/mine_jian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mine_list_jianshu"
                android:text="件商品"
                android:textColor="#000000" />

            <TextView
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=">   " />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/white"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/nn2"
            android:id="@+id/nn3"
            android:layout_width="match_parent"
            android:layout_height="40dp"
           >



            <TextView
                android:textSize="@dimen/txt_20"
                android:id="@+id/mine_list_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="5"
                android:textColor="@color/main_red" />

            <Button
                android:textColor="@color/white"
                android:background="@drawable/selector_order_red"
                android:id="@+id/mine_list_button2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_centerVertical="true"
                android:textSize="14sp" />

            <Button
                android:layout_margin="5dp"
                android:textColor="@color/black"
                android:background="@drawable/selector_order"
                android:text="查看订单"
                android:id="@+id/mine_list_button1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/mine_list_button2"
                android:textSize="14sp" />

            <Button
                android:textColor="@color/black"
                android:background="@drawable/selector_order"
                android:id="@+id/mine_list_button3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@id/mine_list_button1"
                android:visibility="visible"
                android:text="取消订单"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_alignParentBottom="true"
                android:background="@color/grey_color4" />
        </RelativeLayout>
</RelativeLayout>
