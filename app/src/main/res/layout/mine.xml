<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_Relay_allTop"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/mine_top"
        layout="@layout/top_bar"></include>
  
   <RelativeLayout 
        android:layout_below="@id/mine_top"
        android:id="@+id/mine_Relay_Top"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/white"
        android:paddingLeft="30sp"
        android:paddingRight="30sp"
      >
    <com.weblink.zbcommunity.utils.CircleUtils
            android:layout_marginLeft="20dp"
            android:id="@+id/mine_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/mmx"
            />
            <TextView
                android:id="@+id/mine_userName" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="100sp"
                android:textSize="20sp"
                android:textColor="#FF3366"
                android:text="呱呱到家"/>
           <TextView
             android:layout_centerVertical="true"
             android:id="@+id/mine_sign"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"           
             android:layout_alignParentRight="true"
             android:text="未登录"
             android:textColor="#FF3366" />
 
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/mine_Relay_Bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mine_Relay_Top"
        android:background="@color/white"
        android:paddingTop="10sp" >

        <View
            android:id="@+id/mine_line1"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/mine_Relay_first"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/mine_line1"
            android:background="@android:color/white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp" >

            <ImageView
                android:id="@+id/mine_img_baseInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/mine_dingdan" />

            <TextView
                android:textColor="@color/black2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@id/mine_img_baseInfo"
                android:text="我的订单"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_Relay_second"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/mine_Relay_first"
            android:background="@android:color/white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp" >

            <ImageView
                android:id="@+id/mine_img_sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/mine_youhui" />

            <TextView
                android:textColor="@color/black2"
                android:id="@+id/wodezhanghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@id/mine_img_sign"
                android:text="优惠券"
                android:textSize="18sp" />
            
            
            

       

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <View
            android:id="@+id/mine_line3"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_below="@id/mine_Relay_second"
            android:layout_marginTop="20sp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:id="@+id/mine_Relay_four"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/mine_line3"
            android:background="@android:color/white"
            android:paddingLeft="15sp"
            android:paddingRight="15sp" >

            <ImageView
                android:id="@+id/mine_img_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/mine_phone"/>

            <TextView
                android:textColor="@color/black2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@id/mine_img_setting"
                android:text="客服电话"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/mine_kefu"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/mine_Relay_four"
            android:background="@android:color/white"
            android:paddingLeft="15sp"
     
            android:paddingRight="15sp" >

            <ImageView
                android:id="@+id/mine_img_myTopics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@drawable/help" />

            <TextView
                android:textColor="@color/black2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15sp"
                android:layout_toRightOf="@id/mine_img_myTopics"
                android:text="帮助与反馈"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>



        <RelativeLayout

            android:id="@+id/mine_Relay_six"
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_below="@id/mine_kefu"
            android:background="@drawable/selector_order_red"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            >

            <TextView
                android:textColor="@color/white"
                android:id="@+id/mine_exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="退出登录"
                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_alignParentBottom="true"
            android:background="@android:color/darker_gray" />
    </RelativeLayout>
    
</RelativeLayout>
