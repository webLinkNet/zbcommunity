<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="#FFFFFF"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/mine_help_top_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF3366"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/mine_help_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/back" />

        <TextView
            android:id="@+id/help_top_layout_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="帮助与反馈"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>
<EditText
    android:id="@+id/mine_help_edtext"
    android:hint="请输入您要反馈的内容"
    android:layout_below="@id/mine_help_top_layout"
    android:layout_width="match_parent"
    android:layout_height="100dp" />
    <Button
        android:id="@+id/mine_help_tijiao"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="提交反馈"
        android:layout_below="@+id/mine_help_edtext"/>
    <TextView
        android:textColor="#000000"
        android:id="@+id/changjianwenti"
        android:textSize="25sp"
        android:layout_below="@id/mine_help_tijiao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="常见问题"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/changjianwenti"/>

    <ListView
        android:id="@+id/mine_help_listview"
        android:layout_below="@id/changjianwenti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>

</RelativeLayout>