<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/ev_r1"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <ImageView
            android:id="@+id/eva_thingimg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
        <TextView
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/eva_thingimg"
            android:textSize="@dimen/txt_18"
            android:text="商品名"
            android:id="@+id/eva_thingname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ev_r2"
        android:layout_below="@+id/ev_r1"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:width="3dp"
            android:id="@+id/eva_eva"
            android:hint="在此输入您的评价"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/ev_r3"
        android:layout_below="@+id/ev_r2"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/dafen"
            android:text="打分:"
            android:textSize="@dimen/txt_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RatingBar
            android:stepSize="1"
            android:id="@+id/eva_rating"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/dafen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textColor="@color/white"
            android:id="@+id/eval_butt"
            android:text="提交评价"
            android:textSize="@dimen/txt_16"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_commit_eval"
            android:layout_width="wrap_content"
            android:layout_height="35dp" />
    </RelativeLayout>
    <View
        android:layout_below="@id/ev_r3"
        android:layout_width="match_parent"
        android:layout_height="20dp"></View>

</RelativeLayout>