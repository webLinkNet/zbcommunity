<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/mine_change_head_lilay_bottom"
        android:layout_width="match_parent"
        android:layout_height="45sp"
        android:contentDescription="@null"
        android:layout_alignParentBottom="true">
        <TextView 
            android:id="@+id/mine_change_head_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="取消"
            android:gravity="center"
            android:textSize="18sp"
            android:textColor="@color/greenyellow"/>
    </LinearLayout>
    
    <LinearLayout android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_above="@id/mine_change_head_lilay_bottom"
        android:contentDescription="@null"
        android:layout_marginBottom="20sp"
        android:orientation="vertical"
        >
        <TextView
            android:textColor="@color/greenyellow"
            android:id="@+id/mine_change_head_takePhoto"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:text="拍照上传"
            android:gravity="center"
            android:textSize="18sp"
            />
        <View android:layout_width="match_parent"
            android:layout_height="0.7dp"
         />
        <TextView
            android:textColor="@color/greenyellow"
            android:id="@+id/mine_change_head_takeImage"
            android:layout_width="match_parent"
            android:layout_height="45sp"
            android:gravity="center"
            android:text="相册选取"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>
