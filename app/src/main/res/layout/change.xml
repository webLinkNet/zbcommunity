<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <include
        android:id="@+id/change_top_layout"
        layout="@layout/top_bar"></include>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_top_layout">

        <View
            android:id="@+id/blank"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="#FFFFFF" />

        <RelativeLayout
            android:id="@+id/registe_Relay_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blank">

            <EditText
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/phone"
                android:id="@+id/change_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:hint="请输入你的手机号"
                android:inputType="phone"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/change_authcodee"
            android:layout_below="@id/registe_Relay_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginRight="15dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/yanzhengma"
                android:id="@+id/change_authcodeedtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20sp"
                android:hint="请输入验证码"
                android:textColor="@android:color/black"
                android:textSize="14sp" />
            <Button
                android:layout_marginRight="20dp"
                android:layout_marginTop="30sp"
                android:background="@drawable/selector_order"
                android:id="@+id/change_authcode"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:text="获取验证码"
                android:textSize="14sp" />
        </RelativeLayout>

        <EditText
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pwd"
            android:id="@+id/change_passw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/change_authcodee"
            android:layout_marginTop="20sp"
            android:hint="输入重设密码"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <EditText
            android:layout_marginRight="15dp"
            android:drawablePadding="10dp"
            android:drawableLeft="@drawable/pwdag"
            android:id="@+id/change_passwagain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/change_passw"
            android:layout_marginTop="20sp"
            android:hint="确认输入密码"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <Button
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/selector_order_red"
            android:id="@+id/change"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@id/change_passwagain"
            android:layout_marginTop="20sp"
            android:text="确      认"

            />
    </RelativeLayout>
    </RelativeLayout>
